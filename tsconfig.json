{
  "compilerOptions": {
    "module": "es6",
    "target": "es2018",
    "sourceMap": true,
    "jsx": "preserve",
    "lib": [
      "dom",
      "es2018"
    ],
    "strictNullChecks": true,
    "moduleResolution": "node",
    "allowJs": false,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "outDir": "./.build"
  },
  "include": [
    "."
  ],
  "exclude": [
    "node_modules"
  ]
}
